    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "justMyCode": false,
            "env": {
                "PYTHONUNBUFFERED": "1",
                "DJANGO_DEBUG": "True"
            },
            "python": "${workspaceFolder}/venv/bin/python"
        },
        {
            "name": "Django: Shell",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "shell"
            ],
            "django": true,
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/bin/python"
        },
        {
            "name": "Django: Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--noinput"
            ],
            "django": true,
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/bin/python"
        },
        {
            "name": "Django: Migrate",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "migrate"
            ],
            "django": true,
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/bin/python"
        },
        {
            "name": "Django: Seed_Players",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "seed_players"
            ],
            "django": true,
            "justMyCode": false,
            "python": "${workspaceFolder}/venv/bin/python"
        }
    ]
}